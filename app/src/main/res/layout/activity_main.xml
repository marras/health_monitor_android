<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsButton"
        android:src="@android:drawable/ic_menu_preferences"
        android:onClick="launchSettings"
        android:layout_alignEnd="@+id/wifiErrorLayout" />

    <TextView android:text="How do you feel today?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HelloMessage"
        android:textSize="25sp"
        android:layout_alignParentTop="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/HelloMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HEAD"
            android:id="@+id/bodyPartText"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAD ☹"
            android:id="@+id/badButton"
            android:tag="1"
            android:background="#ffff2a3d"
            android:textColor="#ff000000"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:onClick="postData" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            android:id="@+id/normalButton"
            android:tag="2"
            android:background="#fffff846"
            android:textColor="#ff000000"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:onClick="postData" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOOD ☺"
            android:id="@+id/goodButton"
            android:tag="3"
            android:background="#ffa3ff2a"
            android:layout_alignTop="@+id/normalButton"
            android:textColor="#ff000000"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:onClick="postData" />
    </GridLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffb49d"
        android:id="@+id/wifiErrorLayout"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Internet connection required :(  "
            android:id="@+id/internetText"
            android:layout_gravity="center_horizontal|top"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enable WiFi and click here"
            android:id="@+id/connectWifiButton"
            android:layout_gravity="center"
            android:onClick="retryDownload" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/wifi" />
    </FrameLayout>

</RelativeLayout>
