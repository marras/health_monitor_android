<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="How do you feel today?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HelloMessage"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/settingsButton" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/HelloMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HEAD"
            android:id="@+id/bodyPartText"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAD ☹"
            android:id="@+id/badButton"
            android:tag="1"
            android:background="#ffff2a3d"
            android:textColor="#ff000000"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:onClick="postData" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            android:id="@+id/normalButton"
            android:tag="2"
            android:background="#fffff846"
            android:textColor="#ff000000"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:onClick="postData" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOOD ☺"
            android:id="@+id/goodButton"
            android:tag="3"
            android:background="#ffa3ff2a"
            android:layout_alignTop="@+id/normalButton"
            android:textColor="#ff000000"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:onClick="postData" />
    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsButton"
        android:onClick="launchSettings"
        android:background="@android:drawable/ic_menu_preferences"
        android:layout_alignTop="@+id/HelloMessage"
        android:layout_alignEnd="@+id/gridLayout" />

</RelativeLayout>
